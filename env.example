# Dooi MCP Server Configuration

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Default timeout for CLI operations (milliseconds)
DEFAULT_TIMEOUT_MS=30000

# Maximum number of files to process in a single operation
MAX_FILES_LIMIT=1000

# Default package manager (npm, yarn, pnpm)
DEFAULT_PACKAGE_MANAGER=npm

# Enable dry-run mode by default for safety
DEFAULT_DRY_RUN=true

# Maximum staging directory size (MB)
MAX_STAGING_SIZE_MB=100

# Enable debug logging for development
DEBUG=false
